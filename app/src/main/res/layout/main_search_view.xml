<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="18dp"
    android:layout_marginTop="20dp"
    android:focusableInTouchMode="true"
    android:focusable="true">


    <EditText
        android:id="@+id/edtSearchMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:drawableTint="@color/white_800"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/nunito"
        android:hint="@string/search_hint"
        android:paddingVertical="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white_800"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtSearchMain"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingVertical="10dp"
        android:src="@drawable/back"
        app:tint="@color/white_800" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/edtSearchMain"
        android:layout_centerVertical="true"
        android:paddingRight="12dp"
        android:src="@drawable/searchs"
        app:tint="@color/white_800" />

</RelativeLayout>
