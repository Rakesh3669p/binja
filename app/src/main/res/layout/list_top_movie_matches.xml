<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topMovieMatchLayout"
    android:layout_width="150dp"
    android:layout_height="220dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="15dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/movieImageTopMatch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@drawable/image_gradient"
            android:scaleType="fitXY"
            android:src="@drawable/rashi_khanna" />

        <TextView
            android:id="@+id/movieTitleTopMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/movieRatingTopMatch"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:singleLine="true"
            android:text="User Name"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/movieRatingTopMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/movieDescTopMatch"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="User Name"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/movieDescTopMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:maxLines="2"
            android:paddingBottom="14dp"
            android:text="User Name"
            android:textColor="@color/white_800"
            android:textSize="12dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/shareCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:outlineAmbientShadowColor="@color/black"
            app:cardCornerRadius="100dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/share"
                app:tint="@color/white_800" />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
