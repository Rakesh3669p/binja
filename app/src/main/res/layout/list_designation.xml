<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/bulletPoint"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/small_circle"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toStartOf="@+id/designationTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/designationTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Software Developer"
        android:textColor="@color/white_800"
        android:textSize="14dp"
        android:layout_marginLeft="6dp"
        android:fontFamily="@font/nunito"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/bulletPoint"/>

</androidx.constraintlayout.widget.ConstraintLayout>